{
  "name": "react-metamask-checker",
  "version": "1.3.0",
  "description": "React component which uses Render Props approach for checking Web3 instance object injected by Metamask extension",
  "main": "build/index.js",
  "scripts": {
    "build": "yarn run clean && yarn babel ./src --out-dir ./build",
    "clean": "rm -rf ./build",
    "prepare": "yarn run build",
    "test": "yarn test:jest && yarn test:coverage",
    "test:jest": "yarn jest",
    "test:coverage": "cat ./tests/coverage/lcov.info | yarn coveralls"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "react",
    "web3",
    "metamask",
    "ethereum"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LordotU/react-metamask-checker"
  },
  "author": "Oleg Levshin <levshino@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "prop-types": "^15.6.1",
    "react": "^15.6.1 || ^16.3.1",
    "react-dom": "^15.6.1 || ^16.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^24.9.0",
    "coveralls": "^3.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "jsdom": "^11.10.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "regenerator-runtime": "^0.11.1"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/",
      "<rootDir>/tests/"
    ],
    "coverageDirectory": "tests/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/",
      "<rootDir>/tests/setup.js",
      "<rootDir>/tests/mocks/",
      "<rootDir>/tests/coverage/"
    ],
    "testURL": "http://localhost/"
  }
}
